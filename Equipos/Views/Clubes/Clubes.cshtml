@{
    ViewData["Title"] = "Clubes";
}

<div class="text-center">
    <h1 class="display-4">Lista de Clubes</h1>
</div>


<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalClubes" onclick="NuevoClub()">
    Nuevo Club
</button>

<!-- Modal -->
<div class="modal fade" id="ModalClubes" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="ClubID" value="0">

                    <label for="NombreClub" class="form-label">Nombre Club</label>
                    <input type="text" id="NombreClub" class="form-control">

                    <label for="Pais" class="form-label">Pais</label>
                    <input type="text" id="Pais" class="form-control">

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="LimpiarModal()">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarClub()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Club</th>
            <th>Pais</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody id="tbody-clubes"></tbody>
</table>

@section Scripts {
    <script src="~/js/clubes.js"></script>
}
